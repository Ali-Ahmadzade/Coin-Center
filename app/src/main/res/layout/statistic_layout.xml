<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:paddingTop="8dp"
    android:paddingStart="@dimen/layoutMargins"
    android:paddingEnd="@dimen/layoutMargins"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_statistics"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_statistics">

        <TextView
            android:id="@+id/high24H"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/CoinBitText.statisticsPrice"
            android:text="$109,000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_high24H"
            style="@style/CoinBitText.statisticsText"
            android:text="Today's High"
            app:layout_constraintStart_toStartOf="@id/high24H"
            app:layout_constraintTop_toBottomOf="@id/high24H"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/low24H"
            style="@style/CoinBitText.statisticsPrice"
            android:text="$104,000"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/txt_high24H"
            app:layout_constraintTop_toBottomOf="@id/txt_high24H"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_low24H"
            style="@style/CoinBitText.statisticsText"
            android:text="Today's Low"
            app:layout_constraintStart_toStartOf="@id/low24H"
            app:layout_constraintTop_toBottomOf="@id/low24H"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/change24H"
            style="@style/CoinBitText.statisticsPrice"
            android:text="$5400.4"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/txt_low24H"
            app:layout_constraintTop_toBottomOf="@id/txt_low24H"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_change24H"
            style="@style/CoinBitText.statisticsText"
            android:text="Today's Change"
            app:layout_constraintStart_toStartOf="@id/change24H"
            app:layout_constraintTop_toBottomOf="@id/change24H"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guileLine"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/totalVolume"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guileLine"
            style="@style/CoinBitText.statisticsPrice"
            android:text="$109,000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_totalVolume"
            style="@style/CoinBitText.statisticsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Volume"
            app:layout_constraintStart_toStartOf="@id/totalVolume"
            app:layout_constraintTop_toBottomOf="@id/totalVolume" />

        <TextView
            android:id="@+id/marketCapRank"
            style="@style/CoinBitText.statisticsPrice"
            android:text="$104,000"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/txt_totalVolume"
            app:layout_constraintTop_toBottomOf="@id/txt_totalVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_marketCapRank"
            style="@style/CoinBitText.statisticsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MarketCap Rank"
            app:layout_constraintStart_toStartOf="@id/marketCapRank"
            app:layout_constraintTop_toBottomOf="@id/marketCapRank" />

        <TextView
            android:id="@+id/highAllTime"
            style="@style/CoinBitText.statisticsPrice"
            android:text="$5400.4"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/txt_marketCapRank"
            app:layout_constraintTop_toBottomOf="@id/txt_marketCapRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_highAllTime"
            style="@style/CoinBitText.statisticsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="High All The Time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/highAllTime"
            app:layout_constraintTop_toBottomOf="@id/highAllTime" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>